<tr class={"text-gray-700 #{ if rem(@counter, 2) == 1 do "bg-gray-100" end}"} phx-value-id={@player.id}>
<td class="px-4 py-3 border" headers="Player">
<div class="flex items-center text-sm">
<div class="relative w-8 h-8 mr-3 rounded-full md:block">
<img class="object-cover w-full h-full rounded-full" src="https://images.pexels.com/photos/5212324/pexels-photo-5212324.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" alt="" loading="lazy" />
<div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
</div>
<div>
<p class="font-semibold text-black"> <%= @player.name %> </p>
<p class="text-xs text-gray-600"> <%= @player.team %> - <%= @player.position %> </p>
</div>
</div>
</td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="Yds"> <%= @player.total_yards %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="TD"> <%= @player.total_touchdowns %> </td>
<td class={"px-4 py-3 text-ms font-semibold border text-center #{if @player.longest_rush_is_touchdown do "text-red-500" end}"} headers="Lng"> <%= @player.longest_rush %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="Att"> <%= @player.attempts %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="Avg"> <%= @player.average_yards_per_attempt %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="Att/G"> <%= @player.attempts_per_game %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="Yds/G"> <%= @player.yards_per_game %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="1st"> <%= @player.total_first_downs %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="1st%"> <%= @player.first_downs_percentage %>% </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="20+"> <%= @player.rush_20_plus %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="40+"> <%= @player.rush_40_plus %> </td>
<td class="px-4 py-3 text-ms font-semibold border text-center" headers="Fum"> <%= @player.fumbles %> </td>
</tr>
